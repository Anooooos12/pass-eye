{
    "manifest_version": 2,
    "name": "Password Visibility",
    "description": "Toggle password visibility using context menu or keyboard shortcut",
    "version": "2.0.0",
    "applications": {
        "gecko": {
            "id": "password.visibility@sineway",
            "strict_min_version": "63.0"
        }
    },
    "author": "Sineway",
    "icons": {
        "96": "icons/icons8-good-pincode-96.png"
    },
    "permissions": ["activeTab", "contextMenus"],
    "background": {
        "scripts": ["javascripts/background.js"]
    },
    "commands": {
        "toggle-password-visibility": {
            "suggested_key": {
                "default": "Alt+P"
            },
            "description": "Send a 'toggle-password-visibility' event to the extension"
        }
    }
}