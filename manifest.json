{
    "manifest_version": 2,
    "name": "Password Visibility",
    "description": "Toggle password visibility using page action or keyboard shortcut (Alt+P)",
    "version": "1.0.3",
    "applications": {
        "gecko": {
            "id": "password.visibility@sineway",
            "strict_min_version": "63.0"
        }
    },
    "author": "Sineway",
    "homepage_url": "https://bitbucket.org/sineway/firefox-password-visibility",
    "icons": {
        "96": "icons/icons8-good-pincode-96.png"
    },
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["action-controller.js", "background-script.js"]
    },
    "page_action": {
        "default_icon": "icons/icons8-good-pincode-96.png",
        "default_title": "Toggle Password Visibility"
    },
    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Alt+P"
            }
        }
    }
}